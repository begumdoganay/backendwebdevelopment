@model MVCofProject.Models.Author

@{
    ViewData["Title"] = "Add New Author";
}

<div class="container mt-5">
    <h2 class="text-center mb-4">Add New Author</h2>

    <form asp-action="Create" method="post" class="needs-validation" novalidate>
        <div class="row mb-3">
            <div class="col-md-6">
                <label asp-for="FirstName" class="form-label fw-bold">First Name</label>
                <input asp-for="FirstName" class="form-control" placeholder="Enter author's first name" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="col-md-6">
                <label asp-for="LastName" class="form-label fw-bold">Last Name</label>
                <input asp-for="LastName" class="form-control" placeholder="Enter author's last name" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
        </div>

        <div class="row mb-4">
            <div class="col-md-6">
                <label asp-for="BirthTime" class="form-label fw-bold">Date of Birth</label>
                <input asp-for="BirthTime" type="date" class="form-control" />
                <span asp-validation-for="BirthTime" class="text-danger"></span>
            </div>
        </div>

        <div class="d-flex justify-content-between">
            <button type="submit" class="btn btn-success btn-lg">Save</button>
            <a asp-action="Index" class="btn btn-secondary btn-lg">Cancel</a>
        </div>
    </form>
</div>

@section Scripts {
    <script>
        // Add client-side validation styles
        (function () {
            'use strict';
            var forms = document.querySelectorAll('.needs-validation');
            Array.prototype.slice.call(forms)
                .forEach(function (form) {
                    form.addEventListener('submit', function (event) {
                        if (!form.checkValidity()) {
                            event.preventDefault();
                            event.stopPropagation();
                        }
                        form.classList.add('was-validated');
                    }, false);
                });
        })();
    </script>

    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}