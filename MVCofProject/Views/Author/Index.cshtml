<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
<style>
    /* Genel Ayarlar */
    body {
        background-color: #f9f8f6; /* Yumuşak pastel arka plan */
        color: #4a4a4a;
        margin: 0;
        padding: 0;
        display: flex;
        flex-direction: column;
        min-height: 100vh; /* Tam ekran yüksekliği */
        overflow-x: hidden; /* Yatay scrollbar'ı gizle */
    }

    /* Container ayarları */
    .container {
        flex: 1; /* Sayfanın ana alanını kapla */
    }

    /* Navbar ile Mesafe */
    .mt-4 {
        margin-top: 2rem;
    }

    /* Kitap Alanı */
    .scrollable-container {
        max-height: calc(100vh - 250px); /* Sayfa boyutuna göre ayarla */
        overflow-y: auto; /* Yalnızca dikey kaydırma */
    }

    /* Kitap Kartı */
    .book-card {
        background-color: #ffffff;
        border: 1px solid #e0e0e0;
        border-radius: 10px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        transition: transform 0.2s ease-in-out;
    }

        .book-card:hover {
            transform: scale(1.0);
        }

    /* Detay Düğmesi */
    .detail-button {
        background-color: #a3c9a8;
        border: none;
        color: white;
        padding: 5px 10px;
        border-radius: 5px;
        transition: background-color 0.3s ease;
    }

        .detail-button:hover {
            background-color: #91b89a;
        }

    /* Footer */
    footer {
        background-color: #a3c9a8; /* Pastel tonlarda footer */
        color: white;
        text-align: center;
        padding: 5px 0;
        font-size: 14px;
        position: static; /* Sayfa içeriği uzarsa hareket eder */
    }
</style>

    <!-- İçerik -->
    <div class="container mt-4">
        <h2 class="text-center mb-4">Tüm Yazarlar</h2>

        <div class="scrollable-container">
            <div class="row">
                @foreach (var author in Model)
                {
                    <div class="col-md-4 mb-4">
                        <div class="book-card p-3">
                            <h5>@author.FirstName</h5>
                            <p><strong>yazar soyadı:</strong> @author.LastName</p>
                            <a href="@Url.Action("Details", "Author", new { id = author.Id })" class="detail-button">Detaylar</a>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>


