@model MVCofProject.Models.BookDetails
@{
    ViewData["Title"] = "Edit Book";
    var book = Model.book;
    var author = Model.author;
    var authorList = ViewData["AuthorList"] as List<Author>;

}

<div class="container my-5 p-4 rounded-lg shadow-soft" style="background-color: #f5f0e6;">
    <h1 class="text-center mb-4 text-2xl font-semibold text-gray-700">Edit Book Details</h1>
    <hr class="mb-4 border-soft-divider" />

    <form asp-action="Edit" method="post" class="bg-white p-6 rounded-lg shadow-sm">
        <input type="hidden" asp-for="book.Id" />

        <div class="row">
            <div class="col-md-6 mb-3">
                <label asp-for="book.Title" class="form-label text-soft-primary">Book Title</label>
                <input asp-for="book.Title" class="form-control soft-input" />
                <span asp-validation-for="book.Title" class="text-danger"></span>
            </div>


            <div class="mb-3">
                <label asp-for="book.AuthorId" class="form-label">Author</label>
                <select asp-for="book.AuthorId" class="form-select">
                    @foreach (var fauthor in authorList)
                    {
                        if(fauthor.Id==book.AuthorId)
                        {
                          <option value="@author.Id" selected>
                            @fauthor.FirstName @fauthor.LastName
                            </option>
                        }
                        else
                        {
                            <option value="@fauthor.Id">
                                @fauthor.FirstName @fauthor.LastName
                            </option>
                        }
                    }
                </select>
                <div class="form-text text-danger">
                    <span asp-validation-for="book.AuthorId"></span>
                </div>
            </div>


            <div class="col-md-6 mb-3">
                <label asp-for="book.Genre" class="form-label text-soft-primary">Genre</label>
                <input asp-for="book.Genre" class="form-control soft-input" />
                <span asp-validation-for="book.Genre" class="text-danger"></span>
            </div>

            <div class="col-md-6 mb-3">
                <label asp-for="book.PublishDate" class="form-label text-soft-primary">Publish Date</label>
                <input asp-for="book.PublishDate" class="form-control soft-input" type="date" />
                <span asp-validation-for="book.PublishDate" class="text-danger"></span>
            </div>

            <div class="col-md-6 mb-3">
                <label asp-for="book.Isbn" class="form-label text-soft-primary">ISBN</label>
                <input asp-for="book.Isbn" class="form-control soft-input" />
                <span asp-validation-for="book.Isbn" class="text-danger"></span>
            </div>

            <div class="col-md-6 mb-3">
                <label asp-for="book.CopiesAvailable" class="form-label text-soft-primary">Available Copies</label>
                <input asp-for="book.CopiesAvailable" class="form-control soft-input" type="number" />
                <span asp-validation-for="book.CopiesAvailable" class="text-danger"></span>
            </div>
        </div>

        <div class="text-center mt-4">
            <button type="submit" class="btn btn-soft-primary mr-3">Save Changes</button>
            <a asp-action="Index" class="btn btn-soft-secondary">Cancel</a>
        </div>
    </form>
</div>

<style>
    .text-soft-primary {
        color: #8a7f6b;
    }
    .soft-input {
        background-color: #f9f7f3;
        border: 1px solid #d6d1c4;
        transition: all 0.3s ease;
    }
    .soft-input:focus {
        background-color: #ffffff;
        border-color: #8a7f6b;
        box-shadow: 0 0 5px rgba(138, 127, 107, 0.3);
    }
    .btn-soft-primary {
        background-color: #b5ada0;
        color: white;
        border: none;
        transition: all 0.3s ease;
    }
    .btn-soft-primary:hover {
        background-color: #9b938a;
    }
    .btn-soft-secondary {
        background-color: #e6e1d5;
        color: #6b6b6b;
        border: none;
        transition: all 0.3s ease;
    }
    .btn-soft-secondary:hover {
        background-color: #d9d4c7;
        color: #4a4a4a;
    }
    .shadow-soft {
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }
    .border-soft-divider {
        border-color: #d6d1c4;
    }
</style>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}